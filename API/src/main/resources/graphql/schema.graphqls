input UserInputV2 {
  id: ID!
  username: String!
  email: String!
  password: String
  nationality: String!
  phoneNumber: String!
  image: String
}

type UserOutputV2 {
  id: ID
  username: String
  email: String
  nationality: String
  phoneNumber: String
  image: String
  createdAt: String
